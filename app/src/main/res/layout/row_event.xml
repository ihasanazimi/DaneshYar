<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventItemContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_tag_top_radius"
    android:backgroundTint="@color/color_gray_darker"
    android:elevation="2dp"
    android:layoutDirection="rtl"
    android:padding="2dp"
    tools:targetApi="m"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="marquee"
            android:gravity="center|start"
            android:hint="@string/string_subject"
            android:paddingStart="8dp"
            android:paddingEnd="62dp"
            android:singleLine="true"
            android:textColor="@color/color_waite"
            android:textColorHint="@color/color_waite_by_alpha"
            android:textDirection="rtl"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:alpha="0.7"
            android:gravity="start|top"
            android:hint="@string/string_des"
            android:lineSpacingExtra="3dp"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:textColor="@color/color_waite"
            android:textColorHint="@color/color_waite_by_alpha"
            android:textDirection="rtl"
            android:textSize="14sp"
            tools:ignore="TextViewEdits" />

    </LinearLayout>


    <TextView
        android:id="@+id/dateTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:alpha="0.5"
        android:textDirection="rtl"
        android:gravity="end|top"
        android:textColor="@color/color_waite_by_alpha"
        android:textSize="10sp"
        tools:ignore="RelativeOverlap"
        tools:text="1399/11/30\n00:05" />



</RelativeLayout>